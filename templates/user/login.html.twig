{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div id="login-container" class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 align-self-center box-form">
                <h1>Iniciar Sesi√≥n</h1>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <input id="username" class="form-control" type="text" name="_username" placeholder="Username" />
                    <input id="password" class="form-control" type="password" name="_password" placeholder="Password" />
                    <button class="btn btn-success" type="submit">Log In</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}